#!/bin/sh

### Package: nix-install-mesa
### Version: v20210509.2300
### Author: Michael Gan "xmixahlx" michaelbgan@gmail.com
### License: GPLv3
### Script Dependencies: (none)

## OVERRIDES
# NIXTOOLS
if [ -z $NIXTOOLSDIR ]; then
 NIXTOOLSDIR="`pwd`"
fi
echo "*** NIXTOOLSDIR selected is $NIXTOOLSDIR.\n"

# INSTALLDEPS
if [ -z $INSTALLDEPS ]; then
 INSTALLDEPS=debian
fi
echo "*** INSTALLDEPS selected is $INSTALLDEPS.\n"

# GITBRANCH
if [ -z $GITBRANCH ];then
 GITBRANCH=master
fi
echo "*** GITBRANCH selected is $GITBRANCH.\n"

# DRIDRIVERS
if [ -z $DRIDRIVERS ];then
 DRIDRIVERS=" "
fi
echo "*** DRIDRIVERS selected is $DRIDRIVERS.\n"

# VULKANDRIVERS
if [ -z $VULKANDRIVERS ];then
 VULKANDRIVERS=" "
fi
echo "*** VULKANDRIVERS selected is $VULKANDRIVERS.\n"

# GALLIUMDRIVERS
if [ -z $GALLIUMDRIVERS ];then
 GALLIUMDRIVERS=" "
fi
echo "*** GALLIUMDRIVERS selected is $GALLIUMDRIVERS.\n"

# LLVM
if [ -z $LLVM ];then
 LLVM=enabled
fi
echo "*** LLVM selected is $LLVM.\n"

## VARS
DEVDIR=$NIXTOOLSDIR/upstream
GITURL=https://gitlab.freedesktop.org
GITREPO=mesa
GITTREE=mesa
PKGDIR=$GITTREE\_$GITBRANCH
PRURL=$GITURL
PRPATCH=$PRURL/$GITREPO/$GITTREE/-/merge_requests/$PR.patch

## INSTALLDEPS
if [ $INSTALLDEPS = debian ]; then
 sudo apt-get -y build-dep mesa
 sudo apt-get -y install build-essential coreutils libc-bin git meson \
 libunwind-dev valgrind libxvmc-dev libxv-dev libxcb-xinput-dev libxcb-damage0-dev \
 libomxil-bellagio-dev
fi

## PREP
set -e
mkdir -p $DEVDIR
cd $DEVDIR

## GIT
[ -d $PKGDIR ] || git clone --recursive --depth=1 $GITURL/$GITREPO/$GITTREE.git --branch=$GITBRANCH $PKGDIR
cd $PKGDIR
git clean -f
git reset --hard
git pull
git submodule update --init --recursive --depth=1

## CLEAN
rm -Rf tmpbuild

## PULL REQUESTS
if [ $PR ]; then
 rm -f $DEVDIR/$GITTREE\_$PR.patch
 wget $PRPATCH -O $DEVDIR/$GITTREE\_$PR.patch
 patch -p1 < $DEVDIR/$GITTREE\_$PR.patch
fi

## CONFIGURE
meson tmpbuild --prefix=/usr/local --libdir=/usr/local/lib/x86_64-linux-gnu \
--buildtype=release -Dplatforms=auto -Ddri-drivers=$DRIDRIVERS \
-Dvulkan-drivers=$VULKANDRIVERS -Dgallium-drivers=$GALLIUMDRIVERS \
-Dllvm=$LLVM -Dgallium-opencl=icd -Dopencl-native=true -Dgallium-omx=bellagio

## BUILD
ninja -C tmpbuild

## INSTALL
sudo ninja -C tmpbuild install
sudo ldconfig

## EXIT
exit

# ENJOY
