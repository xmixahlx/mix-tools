#!/bin/sh

### Package: nix-install-mesa
### Version: v20210424.2300
### Author: Michael Gan "xmixahlx" michaelbgan@gmail.com
### License: GPLv3
### Script Dependencies: (none)

## OVERRIDES
# NIXTOOLS
if [ -z $NIXTOOLSDIR ]; then
 NIXTOOLSDIR="`pwd`"
fi
echo "\n*** NIXTOOLSDIR selected is $NIXTOOLSDIR.\n"

# INSTALLDEPS
if [ -z $INSTALLDEPS ]; then
 INSTALLDEPS=debian
fi
echo "\n*** INSTALLDEPS selected is $INSTALLDEPS.\n"

# GITBRANCH
if [ -z $GITBRANCH ];then
 GITBRANCH=master
fi
echo "\n*** GITBRANCH selected is $GITBRANCH.\n"

# DRIDRIVERS
if [ -z $DRIDRIVERS ];then
 DRIDRIVERS=" "
fi
echo "\n*** DRIDRIVERS selected is $DRIDRIVERS.\n"

# VULKANDRIVERS
if [ -z $VULKANDRIVERS ];then
 VULKANDRIVERS=" "
fi
echo "\n*** VULKANDRIVERS selected is $VULKANDRIVERS.\n"

# GALLIUMDRIVERS
if [ -z $GALLIUMDRIVERS ];then
 GALLIUMDRIVERS=" "
fi
echo "\n*** GALLIUMDRIVERS selected is $GALLIUMDRIVERS.\n"

# LLVM
if [ -z $LLVM ];then
 LLVM=enabled
fi
echo "\n*** LLVM selected is $LLVM.\n"

## VARS
DEVDIR=$NIXTOOLSDIR/upstream
GITURL=https://gitlab.freedesktop.org
GITREPO=mesa
GITTREE=mesa
PKGDIR=$GITTREE\_$GITBRANCH
PRURL=$GITURL
PRPATCH=$PRURL/$GITREPO/$GITTREE/-/merge_requests/$PR.patch

## INSTALLDEPS
if [ $INSTALLDEPS = debian ]; then
 sudo apt-get -y build-dep mesa
 sudo apt-get -y install build-essential coreutils libc-bin git meson \
 libunwind-dev valgrind libxvmc-dev libxv-dev libxcb-xinput-dev libxcb-damage0-dev
fi

## PREP
set -e
mkdir -p $DEVDIR
cd $DEVDIR

## GIT
[ -d $PKGDIR ] || git clone --depth=1 $GITURL/$GITREPO/$GITTREE.git --branch=$GITBRANCH $PKGDIR
cd $PKGDIR
git clean -f
git reset --hard
git pull

## CLEAN
rm -Rf tmpbuild

## PULL REQUESTS
if [ $PR ]; then
 rm -f $DEVDIR/$GITTREE\_$PR.patch
 wget $PRPATCH -O $DEVDIR/$GITTREE\_$PR.patch
 patch -p1 < $DEVDIR/$GITTREE\_$PR.patch
fi

## CONFIGURE
meson tmpbuild --prefix=/usr/local --libdir=/usr/local/lib/x86_64-linux-gnu \
--buildtype=release -Dplatforms=auto -Ddri-drivers=$DRIDRIVERS \
-Dvulkan-drivers=$VULKANDRIVERS -Dgallium-drivers=$GALLIUMDRIVERS \
-Dllvm=$LLVM -Dgallium-opencl=icd -Dopencl-native=true -Dgallium-omx=bellagio

#-Dlmsensors=enabled

#-Db_lto=true

## BUILD
ninja -C tmpbuild

## INSTALL
sudo ninja -C tmpbuild install
sudo ldconfig

## EXIT
exit

# ENJOY

meson tmpbuild --prefix=/usr/local --libdir=/usr/local/lib/x86_64-linux-gnu \
--buildtype=release -Dplatforms=auto -Ddri-drivers=$DRIDRIVERS \
-Dvulkan-drivers=$VULKANDRIVERS -Dgallium-drivers=$GALLIUMDRIVERS \
-Dlibunwind=enabled -Dllvm=$LLVM -Dgallium-opencl=icd -Dgallium-omx=bellagio \
-Dopencl-native=true -Dosmesa=true -Dglx-direct=true -Dgbm=enabled \
-Dgallium-extra-hud=true -Dgallium-vdpau=enabled -Dlmsensors=enabled \
-Ddri3=enabled -Dgallium-xa=enabled -Dvalgrind=disabled -Dgallium-nine=true \
-Dvulkan-device-select-layer=true -Dvulkan-overlay-layer=true -Dgallium-va=enabled \
-Dglvnd=true -Dshared-glapi=enabled -Degl=enabled -Dglx=dri
